<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls"
    x:Class="HorusStudio.Maui.MaterialDesignControls.MaterialMultilineTextFieldStyles">

    <Style
        TargetType="material:MaterialMultilineTextField"
        ApplyToDerivedTypes="True">
        <Setter
            Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">

                    <!-- Disabled State -->
                    <VisualState
                        x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="LabelColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="SupportingColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="LeadingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="TrailingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.DisabledForegroundOnSurface}, Dark={x:Static material:MaterialDarkTheme.DisabledForegroundOnSurface}}" />
                            <Setter Property="CursorColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                            <Setter Property="Shadow" Value="{x:Null}" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Focused State -->
                    <VisualState
                        x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurface}, Dark={x:Static material:MaterialDarkTheme.OnSurface}}" />
                            <Setter Property="LabelColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                            <Setter Property="SupportingColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="LeadingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="TrailingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                            <Setter Property="CursorColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                            <Setter Property="Shadow" Value="{x:Null}" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Normal State -->
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurface}, Dark={x:Static material:MaterialDarkTheme.OnSurface}}" />
                            <Setter Property="LabelColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="SupportingColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="LeadingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="TrailingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="CursorColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                            <Setter Property="Shadow" Value="{x:Null}" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Error State -->
                    <VisualState
                        x:Name="Error">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurface}, Dark={x:Static material:MaterialDarkTheme.OnSurface}}" />
                            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="LabelColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="SupportingColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="LeadingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="TrailingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="CursorColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Primary}, Dark={x:Static material:MaterialDarkTheme.Primary}}" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- ErrorFocused State -->
                    <VisualState
                        x:Name="ErrorFocused">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurface}, Dark={x:Static material:MaterialDarkTheme.OnSurface}}" />
                            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="LabelColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="SupportingColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="LeadingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.OnSurfaceVariant}, Dark={x:Static material:MaterialDarkTheme.OnSurfaceVariant}}" />
                            <Setter Property="TrailingIconTintColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                            <Setter Property="CursorColor" Value="{AppThemeBinding Light={x:Static material:MaterialLightTheme.Error}, Dark={x:Static material:MaterialDarkTheme.Error}}" />
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>