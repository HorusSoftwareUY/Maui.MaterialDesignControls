<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
                       xmlns:local="clr-namespace:HorusStudio.Maui.MaterialDesignControls.Sample.Pages"
                       xmlns:vm="clr-namespace:HorusStudio.Maui.MaterialDesignControls.Sample.ViewModels"
                       x:Class="HorusStudio.Maui.MaterialDesignControls.Sample.Pages.TextFieldPage"
                       x:TypeArguments="vm:TextFieldViewModel"
                       x:DataType="vm:TextFieldViewModel">
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource MainLayout}">
            <material:MaterialLabel Text="{Binding Subtitle}" />

            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Filled" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField
                        Placeholder="Enter text here" />
                    
                    <material:MaterialTextField
                        LeadingIcon="settings.png"
                        Placeholder="Enter text here" />
                    
                    <material:MaterialTextField
                        TrailingIcon="star_unselected.png"
                        Placeholder="Enter text here"
                        Label="Custom label" />
                    
                    <material:MaterialTextField
                        LeadingIcon="settings.png"
                        TrailingIcon="star_unselected.png"
                        Placeholder="Enter text here"
                        Label="Custom label" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="An input control with a filled background, featuring a movable label, placeholder text, and optional icons." />

            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Outlined" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField
                        Type="Outlined"
                        Placeholder="Enter text here" />
                    
                    <material:MaterialTextField
                        Type="Outlined"
                        LeadingIcon="settings.png"
                        Placeholder="Enter text here" />
                    
                    <material:MaterialTextField
                        Type="Outlined"
                        TrailingIcon="star_unselected.png"
                        Placeholder="Enter text here"
                        Label="Custom label" />
                    
                    <material:MaterialTextField
                        Type="Outlined"
                        LeadingIcon="settings.png"
                        TrailingIcon="star_unselected.png"
                        Placeholder="Enter text here"
                        Label="Custom label" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="An input control with a clear outline around the field, featuring a movable label, placeholder text, and optional icons." />
            
            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Using commands and some configuration" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField 
                        Type="Filled"
                        Keyboard="Numeric"
                        ReturnType="Search"
                        LeadingIcon="star_selected.png"
                        LeadingIconCommand="{Binding LeadingActionCommand}"
                        Focused="MaterialTextField_Focused"
                        Unfocused="MaterialTextField_Focused"
                        ClearButtonVisibility="WhileEditing"
                        Placeholder="Enter text here" />
                    
                    <material:MaterialTextField 
                        Type="Outlined"
                        Keyboard="Telephone"
                        ReturnType="Send"
                        TrailingIcon="star_selected.png"
                        TrailingIconCommand="{Binding TrailingActionCommand}"
                        Focused="MaterialTextField_Focused"
                        Unfocused="MaterialTextField_Focused"
                        ClearButtonVisibility="WhileEditing"
                        Placeholder="Enter text here" />
                    
                    <material:MaterialLabel x:Name="Labelfocused" Text="Unfocused" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="You can change the return type, keyboard, define events like focused, unfocused or text changed, trailing icon or leading icon and clear button visibility." />

            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Changing max length and return command" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField 
                        MaxLength="10"
                        Type="Outlined"
                        Label="Custom label"
                        ReturnCommand="{Binding ReturnCommand}"
                        ReturnType="Done"
                        TextColor="DarkGoldenrod"
                        LabelColor="DarkGreen"
                        BorderColor="DarkGray"
                        PlaceholderColor="DarkBlue"
                        Placeholder="Enter text here" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="You can set background color, place holder color, label color, text color and set a max length." />
            
            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Using supporting text and checking errors" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField 
                        Text="{Binding Text}"
                        SupportingText="{Binding SupportingTextValue}"
                        Type="Filled"
                        Label="With supporting text"
                        TrailingIcon="on_error.png"
                        HasError="{Binding HasAnError}"
                        Placeholder="Enter text here" />
                    <material:MaterialButton Command="{Binding CheckTextFieldCommand}" Text="Check Value" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="You can bind the text, set a supporting text and use an state when an error occured." />
            
            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Disabled" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField 
                        Type="Outlined"
                        Label="New Info"
                        IsEnabled="False"
                        Text="Information here" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="You can disabled a text field." />
            
            <material:MaterialLabel Style="{StaticResource SectionTitle}" Text="Read only" />
            <Frame Style="{StaticResource SurfaceContainer}" Padding="16,32">
                <VerticalStackLayout>
                    <material:MaterialTextField 
                        Type="Filled"
                        IsPassword="True"
                        Label="Password"
                        IsReadOnly="True"
                        Text="Text here" />
                </VerticalStackLayout>
            </Frame>
            <material:MaterialLabel Text="You can set read only and is password." />
            
        </VerticalStackLayout>
    </ScrollView>
</local:BaseContentPage>