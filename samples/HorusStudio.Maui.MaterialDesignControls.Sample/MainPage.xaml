<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
             BackgroundColor="White"
             x:Class="HorusStudio.Maui.MaterialDesignControls.Sample.MainPage"
             Title="HorusStudio.Maui.MaterialDesignControls"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout
            Spacing="16"
            Padding="16">

            <material:MaterialLabel
                Type="BodyMedium"
                Text="MaterialLabel" />

            <material:MaterialDivider />

            <material:MaterialButton 
                ButtonType="Filled"
                Text="MaterialButton"
                Command="{Binding MaterialButtonCommand}"
                IsBusy="{Binding MaterialButtonCommand.IsRunning}" />

            <material:MaterialDivider />

            <StackLayout
                Spacing="8">
                <material:MaterialLabel
                    Type="BodySmall"
                    Text="MaterialProgressIndicator" />
                <material:MaterialProgressIndicator
                    Type="Linear" />
            </StackLayout>

            <material:MaterialDivider />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>