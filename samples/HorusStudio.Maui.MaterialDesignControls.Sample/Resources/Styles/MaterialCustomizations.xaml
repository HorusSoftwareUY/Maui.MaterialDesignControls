<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Color x:Key="MaterialLightPrimary">ForestGreen</Color>
    <Color x:Key="MaterialLightOnPrimary">LightSalmon</Color>
    <Color x:Key="MaterialLightPrimaryContainer">LightGreen</Color>
    <Color x:Key="MaterialLightOnPrimaryContainer">DarkGreen</Color>
    
    <Color x:Key="MaterialDarkPrimary">LightGreen</Color>
    <Color x:Key="MaterialDarkOnPrimary">DarkGreen</Color>
    <Color x:Key="MaterialDarkPrimaryContainer">LightSalmon</Color>
    <Color x:Key="MaterialDarkOnPrimaryContainer">DarkRed</Color>
    
    <sys:Double x:Key="MaterialFontLabelLarge">20</sys:Double>
    <sys:Double x:Key="MaterialFontBodyMedium">25</sys:Double>
    <sys:Double x:Key="MaterialFontTitleSmall">22</sys:Double>
    
    <FileImageSource x:Key="MaterialIconDatePicker">arrow_right.png</FileImageSource>
    <sys:String x:Key="DateFormat">dd-MM-yyyy</sys:String>
   
    <Style TargetType="material:MaterialSwitch">
        <Setter Property="BorderWidth" Value="8" />
    </Style>
            
    <Style TargetType="material:MaterialButton">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
</ResourceDictionary>